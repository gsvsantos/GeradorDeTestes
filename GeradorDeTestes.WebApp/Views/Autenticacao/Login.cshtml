@model LoginViewModel;

@{
    Layout = "_AuthLayout";
    ViewBag.Titulo = "Login de Usuário";
}

<div class="d-flex flex-wrap justify-content-between my-5 gap-1">
    <div class="col-12 col-md-6 align-self-center m-auto">
        <div class="card rounded-4 border-0">
            <div class="card-body cor-padrao p-md-4">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <h3 class="fw-bold mb-0">Teste, Logo Avalie</h3>

                    <span class="fs-4 fw-normal">Login</span>
                </div>

                <partial name="_ValidationAlert"></partial>

                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="mt-3">

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Email" class="control-label fs-5">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Senha" class="control-label fs-5">Senha</label>
                        <input asp-for="Senha" class="form-control" type="password" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a class="botao botao-outline rounded-4 px-5" asp-action="Registro">
                            <i class="bi bi-person-plus"></i>
                            Não tenho uma conta</a>
                        <button type="submit" class="botao rounded-4 px-5">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Confirmar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}