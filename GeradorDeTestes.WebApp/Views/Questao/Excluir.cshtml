@model ExcluirQuestaoViewModel

@{
    ViewBag.Titulo = "Exclusão de Questão";
}

<hr class="border border-white opacity-25" />

<div class="d-flex flex-wrap justify-content-between my-5 gap-1">
    <div class="col-12 col-md-6 align-self-center m-auto">
        <div class="card rounded-4 border-0">
            <div class="card-body cor-padrao p-md-4">
                <h3>Formulário de Exclusão</h3>

                @if (ViewData.ModelState["ConflitoExclusao"]?.Errors.Count > 0)
                {
                    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                        @ViewData.ModelState["ConflitoExclusao"]!.Errors.First().ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                    </div>
                }

                <p class="mt-4">Você deseja realmente excluir a questão "@Model.Enunciado"?</p>

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/questoes" class="botao-excluir botao-excluir-outline rounded-3 px-2">
                            <i class="bi bi-x-circle"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="botao px-5">
                            <i class="bi bi-check-circle"></i>
                            Confirmar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>