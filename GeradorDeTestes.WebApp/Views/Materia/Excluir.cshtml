@using GeradorDeTestes.Dominio.ModuloMateria
@model ExcluirMateriaViewModel;

@{
    ViewBag.Titulo = "Exclusão de Matéria";
}

<hr class="border border-white opacity-25" />

<div class="d-flex flex-wrap justify-content-between my-5 gap-1">
    <div class="col-12 col-md-6 align-self-center m-auto">
        <div class="card rounded-4 border-0">
            <div class="card-body cor-padrao cor-padrao p-md-4">
                <h3>Formulário de Excluir</h3>

                <p class="mt-4">Você deseja realmente excluir a Matéria "@Model.Nome"?</p>

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-3">
                        <a href="/materias" class="botao-excluir botao-excluir-outline rounded-3 px-2">
                            <i class="bi bi-x-circle"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="botao px-5">
                            <i class="bi bi-check-circle"></i>
                            Confirmar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>